# terminal emulator
super + Return
	kitty

# program launcher
super + @space
	rofi -show drun -theme ~/.config/rofi/rofi.rasi

# firefox
super + b
	firefox

# libreoffice
super + w
	libreoffice

# raise volume
XF86AudioRaiseVolume
	pactl set-sink-volume alsa_output.pci-0000_00_09.2.analog-stereo +5% && pactl set-sink-volume bluez_output.CC_98_8B_CD_5C_43.a2dp-sink +5%
# lower volume
XF86AudioLowerVolume
	pactl set-sink-volume alsa_output.pci-0000_00_09.2.analog-stereo -5% && pactl set-sink-volume bluez_output.CC_98_8B_CD_5C_43.a2dp-sink -5%

# raise brightness
XF86MonBrightnessUp
	brightnessctl s 10%+

# lower brightness
XF86MonBrightnessDown
	brightnessctl s 10%-

# mute
XF86AudioMute
	pactl set-sink-mute alsa_output.pci-0000_00_09.2.analog-stereo toggle

# quit bspwm
super + alt + q
	bspc quit

# reload configs
super + alt + r
	pkill -USR1 -x sxhkd && bspc wm -r

# close and kill
super + {_,shift + }q
	bspc node -{c,k}

# set the window state
super + {t,s,f}
	bspc node -t {tiled,floating,fullscreen}

# focus the node in the given direction
super + {_,shift + }{Left,Down,Up,Right}
	bspc node -{f,s} {west,south,north,east}

# focus or send to the given desktop
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'

# preselect the direction
super + ctrl + {Left,Down,Up,Right}
	bspc node -p {west,south,north,east}

# preselect the ratio
super + ctrl + {1-9}
	bspc node -o 0.{1-9}

# expand a window by moving one of its side outward
super + alt + {Left,Down,Up,Right}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# contract a window by moving one of its side inward
super + alt + shift + {Left,Down,Up,Right}
	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

# move a floating window
super + {h,j,k,l}
	bspc node -v {-20 0,0 20,0 -20,20 0}
